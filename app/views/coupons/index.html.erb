<%= render partial: "shared/nav" %>

<body>
  <div class="row">
    <p class='col-12'>My Coupons</p>
  </div>

  <p><%= link_to "Create New Coupon", new_merchant_coupon_path(@merchant) %></p>

<section id="coupons">
  <div class="row">
    <div class="col-sm-6">
      <div class="column-header">
        <p>Active Coupons</p>
      </div>
        <ul>
        <div id="active_coupons">
          <% @active_coupons.each do |coupon| %>
            <section id="coupon-<%= coupon.id %>">
              <li><%= link_to "#{coupon.name}", merchant_coupon_path(@merchant, coupon) %>: 
              <% if coupon.discount_type == "percent"%>
              <%= coupon.discount %>% Off
              <% else %>
              $<%= coupon.discount %> Off
              </li>
              <% end %>
            </section>
          <% end %>
        </div>
        </ul>
    </div>

    <div class="col-sm-6">
      <div class="column-header">
        <p>Inactive Coupons</p>
      </div>
        <ul>
        <div id="inactive_coupons">
        <% @inactive_coupons.each do |coupon| %>
          <section id="coupon-<%= coupon.id %>">
            <li><%= link_to "#{coupon.name}", merchant_coupon_path(@merchant, coupon) %>: 
            <% if coupon.discount_type == "percent"%>
            <%= coupon.discount %>% Off
            <% else %>
            $<%= coupon.discount %> Off
            </li>
            <% end %>
          </section>
        <% end %>
        </ul>
    </div>


  </div>
</section>
<br>
<br>
<br>

<section>
  <div class="row">
    <p class='col-12'>Upcoming Events</p>
  </div>
  <% @holidays.each do |holiday|  %>
  <div class="col-sm-4">
      <div class="column-header">
        <p> <%= holiday.name %> </p>
        <p> <%= holiday.date %> </p>
      </div>
      <div class="image">
      <%= image_tag @image_juneteenth %> 
      </div>
  </div>
  <% end %>

</section>



</body>